<!-- Pulls in each project -->
{{#each projects as |project| }}
<div class="project-card">
  <div class="card">
    <h2>
      <a href="/project/{{project.id}}">{{project.name}}</a>
    </h2>
    <p>Created by {{project.user.name}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{project.description}}
    </p>
  </div>
</div>
{{/each}}


